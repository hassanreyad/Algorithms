#include<bits/stdc++.h>
using namespace std;
#define io ios::sync_with_stdio(false);cin.tie(0);
#define endl "\n"
int arr[50][50];

bool issafe(int x,int y,int n){

    for(int row=0;row<n;row++){
        if(arr[row][y]==1) return false;
    }

    int row = x,col = y;
    while(row>=0 and col>=0){
        if(arr[row][col]==1) return false;
        row--;col--;
    }

    row = x,col=y;

    while(row>=0 and col<n){
        if(arr[row][col]==1) return false;
        row--;
        col++;
    }
    return true;

}

bool queens(int x,int n){
    if(x>=n) return true;
    for(int col=0;col<n;col++){
        if(issafe(x,col,n)){
            arr[x][col]=1;

            if(queens(x+1,n)) return true;
            else arr[x][col]=0; //backtracking
        }
    }
    return false;
}

int main(){

    int n;
    cout<<"ENter the number of queens:"<<endl;
    cin>>n;
    cout<<"The placement chessboard is below:"<<endl;
    io;
    if(queens(0,n)){
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                cout<<arr[i][j]<<' ';
            }
            cout<<endl;
        }
    }

    return 0;
}
